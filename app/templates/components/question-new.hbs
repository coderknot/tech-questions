<h3>New Question</h3>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="title">Title: </label>
      {{input class="form-control" value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="content">Question: </label>
      {{textarea rows="5" class="form-control" value=content id="content"}}
    </div>
    <button class="btn btn-success"{{action 'saveQuestion'}}>Ask!</button>
  </form>
</div>
